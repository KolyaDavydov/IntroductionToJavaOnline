package algorithmization_2.arraysOfArrays;

public class Task6 {
	
	public static void main(String[] args) {
		int n = 8;
		int[][] matrix = new int[n][n];
		for(int i = 0; i < n; i++) {
			if(i < 4) {
				for(int j = i; j < n - i; j++) {
					matrix[i][j] = 1;
				}
			}
			if(i >= 4) {
				for(int j = n - i + 1; j < i; j++) {
					matrix[i][j] = 1;
				}
			}
			
		}
		for(int i = 0; i < n; i++) {
			for(int j = 0; j < n; j++) {
				System.out.print(" " + matrix[i][j] + " ");
			}
			System.out.println();
		}

	}

}
