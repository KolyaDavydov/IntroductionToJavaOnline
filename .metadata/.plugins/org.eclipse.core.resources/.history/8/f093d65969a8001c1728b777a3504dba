package algorithmization_2.arraysOfArrays;

import java.util.Arrays;

public class Task3 {

	public static void main(String[] args) {
		int sizeX = 6;
		int sizeY = 5;
		int[][] matrix = new int[sizeX][sizeY];
		for(int i = 0; i < matrix.length; i++) {
			for(int j = 0; j < matrix[i].length; j++) {
				matrix[i][j] = (int) (Math.random() * 10); 
			}		
		}
		System.out.println("Исходный массив: " + Arrays.deepToString(matrix));
		for (int i = 0; i < matrix.length; i++){
            System.out.println(Arrays.toString(matrix[i]));
        }
		
		int k = (int) (Math.random() * sizeX + 1);
		int p = (int) (Math.random() * sizeY + 1);
		System.out.println("Необходимо вывести на экран " + k + " строку и " + p + " столбец");

		
	}

}
