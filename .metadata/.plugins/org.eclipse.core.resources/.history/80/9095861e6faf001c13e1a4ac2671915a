package algorithmization_2.arraysOfArrays;

import java.util.Arrays;

public class Task16 {

	public static void main(String[] args) {
		int order = 5;
		if (order % 2 == 1) {
			squareOddOrder(order);
		}
		

	}
	public static void squareOddOrder (int order) {
		int matrix[][] = new int[order][order];
		
		int y = 0;
		int x = matrix.length / 2;
		int count = 1;
        while (true){
            matrix[y][x] = count;

            count++;
            if (((y == 0) && (x >= order-1)) && (matrix[order - 1][0] != 0)){
                y++;
            }
            else {
                y--;
                if (y < 0) {
                    y = order - 1;
                }
                x++;
                if (x == order) {
                    x = 0;
                }
                if(matrix[y][x]!=0){
                    y+=2;
                    x--;
                }
            }

            if(count == order * order + 1) {
            	break;
            }
        }
		
		System.out.println("Matrix looks like:");
	      for(int v = 0; v < matrix.length; v++) {
				System.out.println(Arrays.toString(matrix[v]));
	      }
	}

}
